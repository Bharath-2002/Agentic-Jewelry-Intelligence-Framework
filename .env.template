# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/jewelry_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OpenAI Configuration (for AI inference)
OPENAI_API_KEY=your-openai-api-key-here

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# Storage Configuration
IMAGE_STORAGE_PATH=./data/images
MAX_IMAGES_PER_PRODUCT=5

# Crawler Configuration
CRAWLER_MAX_PAGES=50
CRAWLER_TIMEOUT=30000
CRAWLER_HEADLESS=true
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# AI Configuration
# Note: gpt-4-vision-preview is deprecated. Use gpt-4o or gpt-4o-mini instead
# gpt-4o - Best quality, higher cost
# gpt-4o-mini - Good quality, lower cost (recommended for testing)
AI_MODEL=gpt-4o
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.3

# Processing Limits (Cost Control for Development/Testing)
# Limit the number of products to process to reduce LLM API costs
# Set to 0 or comment out for unlimited processing in production
MAX_PRODUCTS_TO_PROCESS=10

# Email Notifications Configuration
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=ai.skinanalyser@gmail.com
EMAIL_HOST_PASSWORD=your-email-password-here
EMAIL_USE_TLS=true
EMAIL_FROM=ai.skinanalyser@gmail.com
EMAIL_TO=recipient@example.com

